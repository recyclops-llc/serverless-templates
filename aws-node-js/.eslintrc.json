{
  "env": {
    "node": true,
    "es2020": true,
    "jest": true
  },
  "extends": ["airbnb-base", "prettier", "plugin:jest/recommended", "plugin:jest/style"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": ["jest", "prettier"],
  "rules": {
    "prettier/prettier": [ "error", { "endOfLine": "auto" } ]
  }
}
